{% extends 'base.html.twig' %}

{% block title %}Galerie - {{ settings_service.getSettings().getName() }}{% endblock %}

{% block hero %}
    <div id="hero-text">
        <div class="container">
            <h1>{{ settings_service.getSettings().getTitle() }}</h1>
            <h2>{{ settings_service.getSettings().getSubtitle() }}</h2>
            <h5>{{ settings_service.getSettings().getSubsubtitle() }}</h5>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="gallery">
        <div class="container-fluid">
            <div class="row">
                <div class="controls">
                    <button type="button" class="control" data-filter="all">All</button>
                    {% for category in categories %}
                        <button type="button" class="control" data-filter=".{{ category.name }}">{{ category.name }}</button>
                    {% endfor %}
                </div>
            </div>

            <div class="row">
                <div class="fw mix-container home-gallery">
                    {% for photo in photos %}
                        <div class="mix {{ photo.categories|join(' ') }}">
                            <a href="{{ path('photo_show', {'id': photo.id}) }}" class="thumb-a">
                                <div class="item-hover">
                                    <div class="hover-text"><h3>{{ photo.title }}</h3></div>
                                </div>
                                <div class="item-img image-container">
                                    <img src="{{ photo.imagePath }}" alt="{{ photo.title }}"/>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Administration{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
            }
            header {
                background-color: #343a40;
                padding: 10px 20px;
                color: #fff;
            }
            nav a {
                color: #fff;
                margin-right: 15px;
                text-decoration: none;
            }
            nav a:hover {
                text-decoration: underline;
            }
            main {
                padding: 20px;
            }
            .flash-message {
                padding: 10px;
                margin-bottom: 20px;
            }
            .flash-message.success {
                background-color: #d4edda;
                color: #155724;
            }
            .flash-message.error {
                background-color: #f8d7da;
                color: #721c24;
            }
        </style>
    {% endblock %}
</head>
<body>
<header>
    <nav>
        <a href="{{ path('admin_photos') }}">Gestion des Photos</a>
        <a href="{{ path('admin_categories') }}">Gestion des Catégories</a>
        <a href="{{ path('admin_settings') }}">Paramètres du site</a>
    </nav>
</header>
<main>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message {{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
